<% include ../partials/header %>


<div class="container text-center">
    <h1> Edit a Comment</h1>

    <div class="row justify-content-center text-center">
        <div class="w-50 ">
            <a href="/<%= city %>/places/<%= id %>" class="text-muted mt-3 mb-3">Go Bck</a>
            <form action="/<%= city %>/places/<%= id %>/comments/<%= comment.id %>/?_method=PUT" method="POST">
                <div class="form-group mt-1 mb-1">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text%>">
                </div>

                <input class="form-control" type="hidden" name="comment[edited]" value="true">

                <div class="form-group mt-1 mb-1">
                    <button type="submit" class="btn btn-outline-primary mt-1 mb-2">Submit</button>
                </div>
            </form>
        </div>
    </div>


</div>


<% include ../partials/footer %>