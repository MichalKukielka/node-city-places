<% include partials/header %>

<h3 class="text-center">Create your free account</h3>

<div class="row justify-content-center">
        <div class="w-25 ">
        <form action="/register" method="post">

            <div class="form-group">
                <label for="fn">First Name:</label>
                <input class="form-control" id="psfnwd" type="text" name="firstName">
            </div>
            <div class="form-group">
                <label for="ln">Last Name:</label>
                <input class="form-control" id="ln" type="text" name="lastName">
                </div>
            <div class="form-group">
                <label for="em">Email:</label>
                <input class="form-control" id="em" type="email" name="email">
            </div>
            <div class="form-group">
                <label for="usrnm">Username:</label>
                <input class="form-control" id="usrnm" type="text" name="username">
            </div>
            <div class="form-group">
                <label for="pswd">Password:</label>
                <input class="form-control" id="pswd" type="password" name="password">
            </div>

            <button type="submit" class="btn btn-outline-primary">Sign Up</button>

        </form>
    </div>
</div>

<% include partials/footer %>