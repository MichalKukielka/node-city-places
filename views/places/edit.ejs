<% include ../partials/header %>

<div class="container text-center">
    <h1>Edit a <%= place.name %></h1>

    <div class="row justify-content-center text-center">
        <div class="w-50 ">
            <a href="/<%= place.city %>/places/<%= place._id %>" class="text-muted mt-3 mb-3">Go Back</a>
            <form action="/<%= place.city %>/places/<%= place._id %>/?_method=PUT" method="POST">
                <div class="form-group mt-1 mb-1">
                    <input class="form-control" type="text" name="place[name]" value="<%= place.name %>">
                </div>
                <div class="form-group mt-1 mb-1">
                    <input class="form-control" type="text" name="place[image]" value="<%= place.image %>">
                </div>
                <div class="form-group mt-1 mb-1">
                    <input class="form-control" type="text" name="place[description]" value="<%= place.description %>">
                </div>
                <div class="form-group mt-1 mb-1">
                    <button type="submit" class="btn btn-lg btn-success mt-1 mb-2">Submit</button>
                </div>

            </form>
        </div>

    </div>


</div>



<% include ../partials/footer %>