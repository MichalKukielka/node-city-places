<% include ../partials/header %>

    <div class="container">

        <div class="row">
            <div class="col-md-3">
                <p class="lead text-center">Basic Info:</p>
                <div class="list-group">
                    <li class="list-group-item active">Placeholder Data</li>
                    <li class="list-group-item">Placeholder Data</li>
                    <li class="list-group-item">Placeholder Data</li>
                </div> 
            </div> 
            <div class="col-md-9">

                    <div class="card border-light mb-3">
                        <img class="card-img-top" src="<%= place.image %>">
                        <div class="card-body">
                            <h2 class="card-title text-primary"><%= place.name %></h2>
                            <h6 class="card-text">Submitted by <%= place.author.username %></h6>
                            
                            
                            <% if(currentUser && place.author.id.equals(currentUser._id)) { %>

                                <a class="btn btn-outline-warning d-inline mr-1 btn-sm btn-block" href="<%= place._id %>/edit" >Edit</a>
                                <form class="d-inline" action="<%= place._id %>/?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-outline-danger d-inline mr-3 btn-sm ">Delete</button>
                                </form>

                            <% } %>

                            <p class="card-text text-justify"><%= place.description %></p>
                        </div>
                    </div>

                    <div class="card border-light mb-3">
                        <div class="card-body text-dark">
                            <div class="card-title mb-4">  
                                <h4 class="d-inline">Comments</h4> <a href="<%= place._id %>/comments/new" class="btn btn-outline-primary d-inline float-right">Add Review</a>

                            </div>
                            
                            <% place.comments.forEach(function(comment){ %>
                                <div class="card border-light mb-3">
                                    <div class="card-body text-dark">
                                        <h5 class="card-title mb-4 d-inline"><%= comment.author.username %></h5>
                                        <p class="card-text d-inline float-right"><small class="text-muted">Added 4 mins ago</small></p>
                                        <p class="card-text text-justify"><%= comment.text  %></p>
                                    </div>
                                </div>
                            <% }) %>                     

                        </div>
                    </div>


            </div> 
        </div> 


    </div> 

<% include ../partials/footer %>